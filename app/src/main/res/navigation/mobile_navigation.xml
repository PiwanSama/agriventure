<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_market"
        android:name="com.example.agriventure.ui.market.MarketFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_market" />

    <fragment
        android:id="@+id/navigation_credit"
        android:name="com.example.agriventure.ui.credit.CreditFragment"
        android:label="@string/title_credit"
        tools:layout="@layout/fragment_credit" />

    <fragment
        android:id="@+id/navigation_learn"
        android:name="com.example.agriventure.ui.learn.LearnFragment"
        android:label="@string/title_learn"
        tools:layout="@layout/fragment_learn" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.agriventure.ui.login.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_navigation_login_to_navigation_market"
            app:destination="@id/navigation_market" />
    </fragment>

</navigation>